<%= form_for @post do |f| %>
    <div class="form-group">
        <label>Titre de l'article</label>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Contenu de l'article</label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>
